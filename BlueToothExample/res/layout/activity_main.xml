<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonFindPairedDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查找匹配设备"
        android:onClick="findPairedDevices" />

    <Button
        android:id="@+id/buttonOpenBlueToothPref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开蓝牙设置"
        android:onClick="openBlueTooth" />

    <Button
        android:id="@+id/buttonSearchDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="搜索蓝牙设备"
        android:onClick="searchDevices" />

    <Button
        android:id="@+id/buttonEnableDiscover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="激活使能被发现"
        android:onClick="enableDiscover" />
    
    <Button
        android:id="@+id/buttonListenAsServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="作为服务器连接(侦听)"
        android:onClick="listenAsServer" />
    
    <Button
        android:id="@+id/buttonListenAsClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="作为客户端连接(创建)"
        android:onClick="listenAsClient" /> 

</LinearLayout>
