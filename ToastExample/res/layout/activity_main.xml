<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonDefaultToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认效果"
        android:onClick="defaultToast"/>
    
    <Button
        android:id="@+id/buttonCustomPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义显示位置"
        android:onClick="customPosition"/>
    
    <Button
        android:id="@+id/buttonMergePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带图片"
        android:onClick="mergePicture"/>
    
    <Button
        android:id="@+id/buttonCustomTotally"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完全自定义"
        android:onClick="customTotally"/>
    
    <Button
        android:id="@+id/buttonFromThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="来自线程"
        android:onClick="fromThread"/>

</LinearLayout>
