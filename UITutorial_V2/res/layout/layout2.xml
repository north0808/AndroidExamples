<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="match_parent">
	<FrameLayout android:id="@+id/frameLayout2"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingLeft="20dip" android:paddingRight="20dip"

		android:background="@drawable/layout2_bg">
		<Button android:text="@string/layout2_button_back" android:id="@+id/layout2_btnBack"
			android:background="@drawable/layout2_button" android:layout_gravity="left|center_vertical"
			android:padding="8dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Button>

		<TextView android:text="@string/layout2_label_title"
			android:layout_gravity="center" android:id="@+id/lblTitle"
			android:textColor="#f333ff" android:textSize="28dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<Button android:text="@string/layout2_button_next" android:id="@+id/layout2_btnNext"
			android:background="@drawable/layout2_button" android:layout_gravity="right|center_vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="8dip"></Button>


	</FrameLayout>


	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/layout2_relativeLayout1">

		<TextView android:text="传递过来的参数值：" android:id="@+id/layout2_textView1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignLeft="@id/layout2_relativeLayout1"
			></TextView>

		<TextView android:text="" android:id="@+id/layout2_label_note"
		android:layout_toRightOf="@id/layout2_textView1"
			android:layout_width="match_parent" android:layout_height="wrap_content"></TextView>

	</RelativeLayout>


</LinearLayout>